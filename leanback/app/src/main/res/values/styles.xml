<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--&lt;!&ndash; Here we setting appcompat’s actionBarStyle &ndash;&gt;-->
        <!--<item name="actionBarStyle">@style/</item>-->

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>

        <!-- The rest of your attributes -->
    </style>
    <style name="PagerTitle">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="GridStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:scrollX">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
